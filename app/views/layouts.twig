{% extends "layouts/application.tpl.twig" %}

{% block content %}

<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">All Layouts - <a class="label label-inverse" href="/admin/layouts/new">New Layout</a></div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">                  
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Path</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for layout in app.layouts %}
            <tr class="odd gradeX">
              <td><a href="#">{{ layout }}</a></td>
              <td>
                <a href="/admin/layout/{{ layout | replace({'/': '&'}) }}/edit" class="label label-info">edit</a>
                <a href="/admin/layout/{{ layout | replace({'/': '&'}) }}/delete" class="label label-important">delete</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}