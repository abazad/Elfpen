{% extends "layouts/application.tpl.twig" %}

{% block content %}

<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">All Pages - <a class="label label-inverse" href="/admin/pages/new">New Page</a></div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">                  
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Title</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for page in app.pages %}
            <tr class="odd gradeX">
              <td><a href="#"><a href="#">{{ page.title }}</a></a></td>
              <td>
                <a href="/admin/page/{{ page.filename }}/edit" class="label label-info">edit</a>
                <a href="/admin/page/{{ page.file }}/delete" class="label label-important">delete</a>
                <a href="{{ page.url }}" target="_blank" class="label label-warning">view</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}