{% extends "layouts/application.tpl.twig" %}

{% block content %}

<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">All Assets - <a class="label label-inverse" href="/admin/assets/new">New Asset</a></div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">                  
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Url</th>
              <th>Type</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for asset in app.assets %}
            <tr class="odd gradeX">
              <td><a href="#"><a href="#">{{ asset.path }}</a></a></td>
              <td><a href="#"><a href="#">{{ asset.ext }}</a></a></td>
              <td>
                <a href="/admin/asset/{{ asset.path | replace({'/': '&'}) }}/edit" class="label label-info">
                {% if asset.ext in app.ext_editable %}
                  edit
                {% else %}
                  view
                {% endif %}
                </a>
                <a href="/admin/asset/{{ asset.path | replace({'/': '&'}) }}/delete" class="label label-important">delete</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}