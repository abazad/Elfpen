{% extends "layouts/application.tpl.twig" %}

{% block content %}
<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Pages</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <form class="form-horizontal" action="/admin/pages" method="post">
          <fieldset>
            <legend>New Page</legend>
            {% if app.errors is defined %}
            <div class="alert alert-error">
              <button class="close" data-dismiss="alert">&times;</button>
              {% for error in app.errors %}
              {{ error.propertyPath }} {{ error.message }}<br>
              {% endfor %}
            </div>
            {% endif %}
            {% if app.success is defined %}
            <div class="alert alert-info">
              <button class="close" data-dismiss="alert">&times;</button>
              <strong>Success!</strong> This is a warning message.
            </div>
            {% endif %}
            <div class="control-group">
              <label class="control-label" for="title">Title* </label>
              <div class="controls">
                <input type="text" class="span6" name="title" value="{{ app.form.title }}"">
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="body">Page's Content* </label>
              <div class="controls">
                <textarea class="input-xlarge textarea" placeholder="Enter Content ..." style="width: 600px; height: 200px" name="body" id="body">{{ app.form.body }}</textarea>
              </div>
            </div>                     
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Save</button>
              <button type="reset" class="btn">Cancel</button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}