{% extends "layouts/application.tpl.twig" %}

{% block content %}
<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Pages</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <form class="form-horizontal">
          <fieldset>
            <legend>New Page</legend>
            <div class="alert alert-error">
              <button class="close" data-dismiss="alert">&times;</button>
              <strong>Error!</strong> This is a warning message.
            </div>
            <div class="alert alert-info">
              <button class="close" data-dismiss="alert">&times;</button>
              <strong>Success!</strong> This is a warning message.
            </div>
            <div class="control-group">
              <label class="control-label" for="typeahead">Title* </label>
              <div class="controls">
                <input type="text" class="span6" id="typeahead">
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="typeahead">Page's Content </label>
              <div class="controls">
                <textarea class="input-xlarge textarea" placeholder="Enter Signature ..." style="width: 600px; height: 200px"></textarea>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="select01">Layout </label>
              <div class="controls">
                <select id="select01">
                  <option>Layout 1</option>
                  <option>Layout 2</option>
                  <option>Layout 3</option>
                </select>
              </div>
            </div>                      
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Save</button>
              <button type="reset" class="btn">Cancel</button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}