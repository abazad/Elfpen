{% extends "layouts/application.tpl.twig" %}

{% block content %}

<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">Posts</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <form class="form-horizontal" action="/admin/assets" method="post" enctype="multipart/form-data">
          <fieldset>
            <legend>{{ app.form_title }}</legend>
            {% if app.errors is defined %}
            <div class="alert alert-error">
              <button class="close" data-dismiss="alert">&times;</button>
              {% for error in app.errors %}
              {{ error.propertyPath }} {{ error.message }}<br>
              {% endfor %}
            </div>
            {% endif %}
            <div class="control-group">
              <label class="control-label" for="asset">Upload* </label>
              <div class="controls">
                <input type="file" class="input-file uniform_on" name="asset" value="{{ app.form.asset }}">
              </div>
            </div>            
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Save</button>
              <a href="/admin/assets" class="btn">Cancel</a>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}