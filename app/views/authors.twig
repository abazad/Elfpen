{% extends "layouts/application.tpl.twig" %}

{% block content %}
<!-- Content here -->          
<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">All Authors - <a class="label label-inverse" href="/admin/authors/new">New Author</a></div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">                  
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th>Name</th>
              <th>Role</th>
              <th>Email</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for key, author in app.authors %}
            <tr class="odd gradeX">
              <td><a href="#">{{ author.name }}</a></td>
              <td>Administrator</td>
              <td><a href="#">{{ author.email }}</a></td>
              <td>
                <a href="/admin/author/{{ key }}/edit" class="label label-info">edit</a>
                <a href="/admin/author/{{ key }}/delete" class="label label-important">delete</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
{% endblock %}